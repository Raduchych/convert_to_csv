
import os,sys,csv
 
from PIL import Image,ImageDraw

def convert_to_grayscale(imName):
	image=Image.open(imName)
	image=image.convert('L')
	image.save(imName)


def rotate_image(imName):
	
	image=Image.open(imName)
	for i in range(360):
		image1=image.rotate(i)		
		(shortname,extension)=os.path.splitext(imName)
		image1.save(shortname+str(i)+extension)
	
